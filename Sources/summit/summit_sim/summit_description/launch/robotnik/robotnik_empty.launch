<?xml version="1.0"?>
<launch>

  <env name="GAZEBO_RESOURCE_PATH" value="$(find summit_description)" />

  <!-- start gazebo with an simple world -->
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>

  <!-- set use_sim_time flag -->
  <group if="$(arg use_sim_time)">
    <param name="/use_sim_time" value="true" />
  </group>

  <node name="gazebo" pkg="gazebo" type="gazebo" args="$(find summit_description)/worlds/robotnik2012.world" respawn="false" output="screen"/>

  <!-- start gui -->
  <group if="$(arg gui)">
    <node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen"/>
  </group>

</launch>
